{
  "paths": {
    "input_dir": "input/",
    "output_dir": "output/",
    "video_dir": "output/video/",
    "audio_dir": "output/audio/",
    "text_dir": "output/text/",
    "json_dir": "output/json/",
    "channels_file": "input/B2BcloudChannels.csv",
    "download_file": "input/downloadVideo.csv"
  },
  "thresholds": {
    "whisper_confidence": 0.8,
    "face_detection": 0.5,
    "scene_change": 0.3,
    "audio_threshold": 0.1,
    "pitch_min": 80,
    "pitch_max": 400
  },
  "models": {
    "whisper_model": "base",
    "device": "auto",
    "vision_model": "google_cloud_vision",
    "torch_device": "cuda"
  },
  "processing": {
    "max_workers": 4,
    "chunk_size": 1000,
    "timeout": 300,
    "retry_attempts": 3
  },
  "output_formats": {
    "audio_format": "wav",
    "video_format": "mp4",
    "text_encoding": "utf-8"
  }
}
